{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "",
    "preserveConstEnums": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "pretty": true,
    "rootDir": "src",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}